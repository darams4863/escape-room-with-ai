# 로컬 개발용 환경변수 설정
# 이 파일을 .env로 복사해서 사용하세yong~

# Database
DATABASE_URL=postgresql://POSTGRES_USER:POSTGRES_PASSWORD@localhost:5433/POSTGRES_DB
POSTGRES_DB=
POSTGRES_USER=  
POSTGRES_PASSWORD=

# redis
REDIS_URL=redis://localhost:6379

# OpenAI (필수 - 실제 키로 변경)
OPENAI_API_KEY=your-actual-openai-api-key-here

# JWT (필수 - 32자 이상 보안키)
JWT_SECRET_KEY=your-secret-jwt-key-at-least-32-characters-long-here 

# Application
APP_NAME=Escape Room AI Chatbot 
APP_VERSION=1.0.0
DEBUG=true

# Vector Search
VECTOR_SEARCH_LIMIT=5
SIMILARITY_THRESHOLD=0.6

# JWT Algorithm 
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Crawling Settings (크롤링 설정)
CRAWL_BASE_URL=
CRAWL_WAIT_TIME=2
CRAWL_PAGE_TIMEOUT=10
CRAWL_BATCH_SIZE=10
CRAWL_HEADLESS=true
