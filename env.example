# 로컬 개발용 환경변수 설정
# 이 파일을 .env로 복사해서 사용하세yong~

# Database
DATABASE_URL=postgresql://POSTGRES_USER:POSTGRES_PASSWORD@localhost:5433/POSTGRES_DB
POSTGRES_DB=
POSTGRES_USER=  
POSTGRES_PASSWORD=

# redis
REDIS_URL=redis://localhost:6379

# rmq 
RMQ_USERNAME=
RMQ_PASSWORD=
RMQ_HOST=
RMQ_PORT=
RMQ_VHOST=

# RMQ Worker Settings (워커 개수 설정)
RMQ_WORKER_COUNT=2

# grafana 
GRAFANA_USERNAME=
GRAFANA_PASSWORD=

# OpenAI (필수 - 실제 키로 변경)
OPENAI_API_KEY=

# Application
APP_NAME=Escape Room AI Chatbot 
APP_VERSION=1.0.0
DEBUG=true

# Vector Search
VECTOR_SEARCH_LIMIT=5
SIMILARITY_THRESHOLD=0.6

# JWT (필수 - 32자 이상 보안키)
JWT_SECRET_KEY= 
# JWT Algorithm 
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=1

# Crawling Settings (크롤링 설정)
CRAWL_BASE_URL=
CRAWL_WAIT_TIME=2
CRAWL_PAGE_TIMEOUT=10
CRAWL_BATCH_SIZE=10
CRAWL_HEADLESS=true

# aws S3 bucket 
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION="ap-northeast-2"
S3_BUCKET_NAME="escape-room-images"
S3_IMAGE_PREFIX="posters/"

k8=""

# NLP 
NLP_PROMPT_VERSION="intent.v1.2"
NLP_SCHEMA_VERSION="entities.v1.2"

# 프롬프트 버전 선택 
CURRENT_PROMPT_VERSION="intent.v1.2"
CURRENT_SCHEMA_VERSION="entities.v1.2" 
